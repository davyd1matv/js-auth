{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
	<header>
		{{> back-button}}
	</header>

	<form class="page__section">
		<h1 class="page__title">Реєстрація</h1>

		<div class="form">
			<div class="form__item">
				{{> field action="singupForm.change" label="Ел. адреса" type="email" name="email"
				placeholder="Ваш email"}}
				<span name="email" class="form__error">Error</span>
			</div>
			<div class="form__item">
				{{> field-password action="singupForm.change" label="Пароль" name="password"
				placeholder="Ваш пароль"}}
				<span name="password" class="form__error">Error</span>
			</div>
			<div class="form__item">
				{{> field-select action="singupForm.change" label="Роль" name="role" list=data.role
				placeholder="Оберіть роль"}}
				<span name="role" class="form__error">Error</span>
			</div>
			<div class="form__item">
				{{> field-checkbox action="singupForm.change" label="Ви погоджуєтеся із правилами сервіса"
				name="isConfirm"}}
				<span name="isConfirm" class="form__error">Error</span>
			</div>
		</div>

		<button onclick="singupForm.submit()" class="button" type="button">Зареєструватися</button>

		<span class="alert alert--error">Увага, Помилка!</span>
	</form>
</div>

